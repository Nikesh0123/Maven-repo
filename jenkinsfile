pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'sonarqube'              // Must match SonarQube server name in Jenkins
        PROJECT_KEY   = 'my-simple-project'       // Project name shown in SonarQube
    }

    stages {
        stage('Checkout') {
            steps {
                git url: '', branch: 'main'
            }
        }

        stage('SonarQube Code Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=${PROJECT_KEY}'
                }
            }
        }
    }
}
